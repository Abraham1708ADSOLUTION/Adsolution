              <div class="cta">
                <a href=" {{ block.settings.link-url-card }}" class="button">
                  <span> {{ block.settings['text-url-card'] }} </span>
                  <svg viewBox="0 0 24.00 24.00" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff">
                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <circle cx="12" cy="12" r="9" transform="rotate(-90 12 12)" stroke="#ffffff" stroke-width="1.488" stroke-linecap="round" stroke-linejoin="round"></circle> <path d="M7 12H17M17 12L14.5 14.5M17 12L14.5 9.5" stroke="#ffffff" stroke-width="1.488" stroke-linecap="round" stroke-linejoin="round"></path> </g>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
  var swiper = new Swiper('.mySwiper', {
    slidesPerView: 1,
    spaceBetween: 10,
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
        spaceBetween: 20
      },
      768: {
        slidesPerView: 3,
        spaceBetween: 25
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 25
      }
    }
  })
</script>

{% schema %}
{
  "name": "Boton-link",
  "settings": [
    {
      "type": "text",
      "id": "main-title-cards",
      "label": "Title",
      "default": "Nuestros Planes"
    },
    {
      "type": "color",
      "id": "color-title",
      "label": "Selecciona un color"
    }
  ],
  "blocks": [
    {
      "name": "card",
      "type": "card",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "card-name",
          "label": "Nombre del plan",
          "default": "starter"
        },
        {
          "type": "text",
          "id": "card-price",
          "label": "precio del plan",
          "default": "10"
        },
        {
          "type": "text",
          "id": "card-plan",
          "label": "Recurrencia del plan",
          "default": "mensual"
        },
        {
          "type": "richtext",
          "id": "card-description",
          "label": "Descripcion del plan"
        },
        {
          "type": "text",
          "id": "benefit-1",
          "label": "Beneficio",
          "default": "Lorem Ipsum"
        },
        {
          "type": "text",
          "id": "benefit-2",
          "label": "Beneficio",
          "default": "Lorem Ipsum"
        },
        {
          "type": "text",
          "id": "benefit-3",
          "label": "Beneficio",
          "default": "Lorem Ipsum"
        },
        {
          "type": "text",
          "id": "benefit-4",
          "label": "Beneficio",
          "default": "Lorem Ipsum"
        },
        {
          "type": "text",
          "id": "text-url-card",
          "label": "Texto",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "link-url-card",
          "label": "Link"
        },
        {
          "type": "color",
          "id": "color-btn",
          "label": "Selecciona un color",
          "default": "#268AFF"
        },
        {
          "type": "color",
          "id": "color-btn-hover",
          "label": "Selecciona un color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "card"
    }
  ]
}
